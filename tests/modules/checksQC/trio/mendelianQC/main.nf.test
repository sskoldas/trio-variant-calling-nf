nextflow_process {

    name "Test Process TRIO_MENDELIAN_QC"
    script "modules/checksQC/trio/mendelianQC/main.nf"
    process "TRIO_MENDELIAN_QC"

    test("Should run without failures") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = file("${projectDir}/tests/modules/checksQC/trio/mendelianQC/input/mock.table")
                input[1] = "mock_cohort"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.mendel).match()
        }

    }

}
